<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="3"
        android:textAlignment="center"
        android:textSize="30sp"
        android:id="@+id/editText_gradeNumber"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:textAlignment="center"
        android:textSize="30sp"
        android:singleLine="true"
        android:id="@+id/editText_gradeLetter"
        android:layout_below="@+id/editText_gradeNumber"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add climb"
        android:textSize="30sp"
        android:id="@+id/button_addClimb"
        android:layout_below="@+id/editText_gradeLetter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_climbResult"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>