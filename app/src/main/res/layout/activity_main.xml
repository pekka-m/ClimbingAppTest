<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Climbing"
        android:id="@+id/button_moveToClimb"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Campus"
        android:id="@+id/button_moveToCampus"
        android:layout_below="@+id/button_moveToClimb"
        android:layout_alignEnd="@+id/button_moveToClimb" />

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Hangboard"
        android:id="@+id/button_moveToHangboard"
        android:layout_below="@+id/button_moveToCampus"
        android:layout_alignEnd="@+id/button_moveToCampus" />


    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/button_status"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_moveToClimb" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_result"
        android:layout_below="@+id/button_moveToHangboard"
        android:layout_alignStart="@+id/button_moveToHangboard"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical" />

</RelativeLayout>
