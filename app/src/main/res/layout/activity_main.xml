<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add climb"
        android:id="@+id/button_addClimb"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add campus"
        android:id="@+id/button_addCampus"
        android:layout_below="@+id/button_addClimb"
        android:layout_alignEnd="@+id/button_addClimb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add hang"
        android:id="@+id/button_addHang"
        android:layout_below="@+id/button_addCampus"
        android:layout_alignEnd="@+id/button_addCampus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="3"
        android:id="@+id/editText_input"
        android:layout_alignBottom="@+id/button_addCampus"
        android:layout_alignEnd="@+id/textView_result"
        android:layout_marginEnd="113dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_result"
        android:layout_below="@+id/button_addHang"
        android:layout_alignStart="@+id/button_addHang"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/button_status"
        android:layout_alignBottom="@+id/editText_input"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
